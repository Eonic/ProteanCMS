<?xml version="1.0" encoding="utf-8" ?>

<Content type="xform" name="SkinSettings">
  <model>
    <instance>
      <theme>
        <add key="CurrentTheme" value="ProteanMasterTheme"/>
        <add key="variablesPath" value="/css/variables.less"/>
        <add key="SiteXsl" value="/ewthemes/ProteanMasterTheme/TopNavSideSub.xsl" />
        <add key="ProteanMasterTheme.HeaderLayout" value="header-template1"/>
        <add key="ProteanMasterTheme.ThemePreset" value="Default" />
        <add key="ProteanMasterTheme.ThemeSkin" value="" />
        
        <add key="ProteanMasterTheme.brand-primary" value="#2C3E50" />
        <add key="ProteanMasterTheme.brand-action" value="#18BC9C" />
        <add key="ProteanMasterTheme.brand-info" value="#3498DB" />
        <add key="ProteanMasterTheme.brand-success" value="#18BC9C" />
        <add key="ProteanMasterTheme.brand-warning" value="#F39C12" />
        <add key="ProteanMasterTheme.brand-danger" value="#E74C3C" />

        <add key="ProteanMasterTheme.link-color" value="#18BC9C" />
        <add key="ProteanMasterTheme.text-color" value="#333" />
        <add key="ProteanMasterTheme.headings-font" value="'Lato', sans-serif" />
        <add key="ProteanMasterTheme.headings-font-family" value="'Lato', sans-serif" />
        <add key="ProteanMasterTheme.headings-font-import" value="Lato:300,400,700" />
        <add key="ProteanMasterTheme.base-font" value="'Lato', sans-serif" />
        <add key="ProteanMasterTheme.font-family-base" value="'Lato', sans-serif" />
        <add key="ProteanMasterTheme.font-import-base" value="Lato:300,400,700" />

        <add key="ProteanMasterTheme.btn-default-bg" value="#444" />
        <add key="ProteanMasterTheme.btn-default-color" value="#fff" />
        <add key="ProteanMasterTheme.headings-color" value="#333" />
        
      </theme>
    </instance>
    <submission id="WebSettings" action="" method="post" event="form_check(this)" />
    <bind nodeset="theme">
      <bind id="Theme" nodeset="add[@key='CurrentTheme']/@value" required="true()" type="string" />
      <bind id="SiteXsl" nodeset="add[@key='SiteXsl']/@value" required="true()" type="string" />
      <bind id="HeaderLayout" nodeset="add[@key='ProteanMasterTheme.HeaderLayout']/@value" required="true()" type="string" />
      <bind id="ThemePreset" nodeset="add[@key='ProteanMasterTheme.ThemePreset']/@value" required="true()" type="string" />
      <bind id="ThemeSkin" nodeset="add[@key='ProteanMasterTheme.ThemeSkin']/@value" required="true()" type="string" />
      
      <bind id="brand-primary" nodeset="add[@key='ProteanMasterTheme.brand-primary']/@value" required="true()" type="string" />
      <bind id="brand-action" nodeset="add[@key='ProteanMasterTheme.brand-action']/@value" required="true()" type="string" />
      <bind id="brand-info" nodeset="add[@key='ProteanMasterTheme.brand-info']/@value" required="true()" type="string" />
      <bind id="brand-success" nodeset="add[@key='ProteanMasterTheme.brand-success']/@value" required="true()" type="string" />
      <bind id="brand-warning" nodeset="add[@key='ProteanMasterTheme.brand-warning']/@value" required="true()" type="string" />
      <bind id="brand-danger" nodeset="add[@key='ProteanMasterTheme.brand-danger']/@value" required="true()" type="string" />

      <bind id="link-color" nodeset="add[@key='ProteanMasterTheme.link-color']/@value" required="true()" type="string" />
      <bind id="text-color" nodeset="add[@key='ProteanMasterTheme.text-color']/@value" required="true()" type="string" />
      <bind id="headings-font" nodeset="add[@key='ProteanMasterTheme.headings-font']/@value" required="false()" type="string" />
      <bind id="headings-font-family" nodeset="add[@key='ProteanMasterTheme.headings-font-family']/@value" required="true()" type="string" />
      <bind id="headings-font-import" nodeset="add[@key='ProteanMasterTheme.headings-font-import']/@value" required="true()" type="string" />
      <bind id="base-font" nodeset="add[@key='ProteanMasterTheme.base-font']/@value" required="false()" type="string" />
      <bind id="base-font-family" nodeset="add[@key='ProteanMasterTheme.font-family-base']/@value" required="true()" type="string" />
      <bind id="base-font-import" nodeset="add[@key='ProteanMasterTheme.font-import-base']/@value" required="true()" type="string" />

      <bind id="btn-default-bg" nodeset="add[@key='ProteanMasterTheme.btn-default-bg']/@value" required="true()" type="string" />
      <bind id="btn-default-color" nodeset="add[@key='ProteanMasterTheme.btn-default-color']/@value" required="true()" type="string" />
      <bind id="headings-color" nodeset="add[@key='ProteanMasterTheme.headings-color']/@value" required="true()" type="string" />
      
    </bind>
  </model>
  <group ref="WebSettings">
    <label>ProteanMasterTheme Theme Settings</label>
    <group class="inline">
      <label>Preset Colour Themes</label>
      <select1 bind="ThemePreset" class="ewQuery" appearance="minimal" query="themePresets">
        <label>Load Existing Preset Colour Theme</label>
        <item>
          <label></label>
          <value></value>
        </item>
      </select1>
      <input ref="newPresetName">
        <help class="inline">this saves the current configuration as a new preset</help>
        <label>Save As New Preset - Name</label>
      </input>
    </group>
    <group>
      <label>Overall Layout</label>
      <group class="inline">
        <select1 bind="SiteXsl" appearance="minimal">
          <label>Sub Menu Layout</label>
          <item>
            <label>Top Navigation Sub Menu Dropdown</label>
            <value>/ewthemes/ProteanMasterTheme/NoMenuWithBanner.xsl</value>
          </item>
          <item>
            <label>Top Navigation Sub Navigation on the Left</label>
            <value>/ewthemes/ProteanMasterTheme/TopNavSideSub.xsl</value>
          </item>
        </select1>
        <select1 bind="HeaderLayout" appearance="minimal">
          <label>Header Layout</label>
          <item>
            <label>Long menu below header content</label>
            <value>header-template1</value>
          </item>
          <item>
            <label>Short menu to right of logo</label>
            <value>header-flex1</value>
          </item>
        </select1>
      </group>
    </group>
    <group class="inline">
      <label>Theme Style</label>
      <select1 bind="ThemeSkin" appearance="minimal">
        <item>
          <label>Default</label>
          <value></value>
        </item>
        <item>
          <label>Bold</label>
          <value>/ewthemes/ProteanMasterTheme/css/skins/bold.less</value>
        </item>
        <item>
          <label>Clean</label>
          <value>/ewthemes/ProteanMasterTheme/css/skins/clean.less</value>
        </item>
      </select1>
    </group>
    <group class="inline">
      <label>Main Colours</label>
      <input bind="brand-primary" class="colorPicker">
        <label>Brand Primary Colour</label>
      </input>
      <input bind="brand-action" class="colorPicker">
        <label>Brand Action Colour</label>
      </input>
      <input bind="brand-info" class="colorPicker">
        <label>Brand Info Colour</label>
      </input>
      <input bind="brand-success" class="colorPicker">
        <label>Brand Success Colour</label>
      </input>
      <input bind="brand-warning" class="colorPicker">
        <label>Brand Warning Colour</label>
      </input>
      <input bind="brand-danger" class="colorPicker">
        <label>Brand Danger Colour</label>
      </input>
    </group>
    <group class="inline">
      <label>Fonts Settings</label>
      <input bind="text-color" class="colorPicker">
        <label>Theme text colour</label>
      </input>
      <input bind="headings-color" class="colorPicker">
        <label>Headings Colour</label>
      </input>
      <select1 bind="base-font" appearance="minimal" class="fontSelect">
        <label>Body Fonts</label>
        <item>
          <label>Lato</label>
          <value>'Lato', sans-serif|Lato:300,400,700,300italic,400italic,700italic</value>
        </item>
        <item>
          <label>Open Sans </label>
          <value>'Open Sans', sans-serif|Open+Sans:300italic,400italic,700italic,400,700,300</value>
        </item>
        <item>
          <label>Roboto </label>
          <value>'Roboto', sans-serif|Roboto:300italic,400italic,500italic,700italic,300,400,500,700</value>
        </item>
        <item>
          <label>Source Sans Pro </label>
          <value>'Source Sans Pro', sans-serif|Source+Sans+Pro:400,300,300italic,400italic,600,600italic,700,700italic</value>
        </item>
        <item>
          <label>Droid Sans</label>
          <value>'Droid Sans', sans-serif|Driod+Slab:400,700,400italic,700italic</value>
        </item>
        <item>
          <label>Roboto Slab</label>
          <value>'Roboto Slab', sans-serif|Roboto+Slab:400,700,300</value>
        </item>
        <item>
          <label>Cabin</label>
          <value>'Cabin', sans-serif|Cabin:400,700,400italic,700italic</value>
        </item>
        <item>
          <label>Lobster</label>
          <value>'Lobster', cursive|Lobster</value>
        </item>
        <item>
          <label>Arial Black/Gadget</label>
          <value>Arial Black, Arial Black, Gadget, sans-serif|none</value>
        </item>
        <item>
          <label>Courier New/Newlinespace</label>
          <value>Courier New, Courier New, Newlinespace|none</value>
        </item>
        <item>
          <label>Georgia</label>
          <value>Georgia1, Georgia, serif|none</value>
        </item>
        <item>
          <label>Lucida Sans/Lucida Grande</label>
          <value>Lucida Sans Unicode, Lucida Grande, sans-serif|none</value>
        </item>
        <item>
          <label>Tahoma/Geneva</label>
          <value>Tahoma, Geneva, sans-serif|none</value>
        </item>
        <item>
          <label>Times New Roman/Times</label>
          <value>Times New Roman, Times New Roman, Times, serif|none</value>
        </item>
        <item>
          <label>Verdana/Geneva</label>
          <value>Verdana, Geneva, sans-serif|none</value>
        </item>
        <item>
          <label>Add New Google Font</label>
          <value>'Font Name Here', sans-serif|Font+Name+Here:300,400,700,300italic,400italic,700italic</value>
        </item>
        <value />
      </select1>
      <select1 bind="headings-font" appearance="minimal" class="fontSelect">
        <label>Heading Fonts</label>
        <item>
          <label>Lato</label>
          <value>'Lato', sans-serif|Lato:300,400,700,300italic,400italic,700italic</value>
        </item>
        <item>
          <label>Open Sans </label>
          <value>'Open Sans', sans-serif|Open+Sans:300italic,400italic,700italic,400,700,300</value>
        </item>
        <item>
          <label>Droid Sans</label>
          <value>'Droid Sans', sans-serif|Driod+Slab:400,700,400italic,700italic</value>
        </item>
        <item>
          <label>Roboto Slab</label>
          <value>'Roboto Slab', sans-serif|Roboto+Slab:400,700,300</value>
        </item>
        <item>
          <label>Cabin</label>
          <value>'Cabin', sans-serif|Cabin:400,700,400italic,700italic</value>
        </item>
        <item>
          <label>Lobster</label>
          <value>'Lobster', cursive|Lobster</value>
        </item>
        <item>
          <label>Arial Black/Gadget</label>
          <value>Arial Black, Arial Black, Gadget, sans-serif|none</value>
        </item>
        <item>
          <label>Courier New/Newlinespace</label>
          <value>Courier New, Courier New, Newlinespace|none</value>
        </item>
        <item>
          <label>Georgia</label>
          <value>Georgia1, Georgia, serif|none</value>
        </item>
        <item>
          <label>Lucida Sans/Lucida Grande</label>
          <value>Lucida Sans Unicode, Lucida Grande, sans-serif|none</value>
        </item>
        <item>
          <label>Tahoma/Geneva</label>
          <value>Tahoma, Geneva, sans-serif|none</value>
        </item>
        <item>
          <label>Times New Roman/Times</label>
          <value>Times New Roman, Times New Roman, Times, serif|none</value>
        </item>
        <item>
          <label>Verdana/Geneva</label>
          <value>Verdana, Geneva, sans-serif|none</value>
        </item>
        <item>
          <label>Add New Google Font</label>
          <value>'Font Name Here', sans-serif|Font+Name+Here:300,400,700,300italic,400italic,700italic</value>
        </item>
        <value />
      </select1>
    </group>
    <group class="inline">
      <label>Add Google Fonts</label>
      <input bind="base-font-family">
        <label>Text Font Name</label>
      </input>
      <input bind="headings-font-family">
        <label>Heading Font Name</label>
      </input>
      <input bind="base-font-import">
        <label>Text Font Import</label>
      </input>
      <input bind="headings-font-import">
        <label>Heading Font Import</label>
      </input>

    </group>
    <group class="inline">
      <label>Links and buttons</label>
      <input bind="link-color" class="colorPicker">
        <label>Link Colour</label>
      </input>
      <input bind="btn-default-bg" class="colorPicker">
        <label>Button Background Colour</label>
      </input>
      <input bind="btn-default-color" class="colorPicker">
        <label>Button Text Colour</label>
      </input>
    </group>
    
    <submit submission="" ref="WebSettings" class="principle">
      <label>Save Settings</label>
    </submit>
  </group>
</Content>
