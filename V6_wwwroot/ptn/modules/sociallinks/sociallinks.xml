                <label>Right</label>
                <value>right</value>
              </item>
            </select1>
          </group>

          <group class="col-lg-4">
            <select1 bind="cIcon-size" class="bs-only" appearance="minimal">
              <label>Icon Size</label>
              <item>
                <label>1x</label>
                <value>fa-1x</value>
              </item>
              <item>
                <label>2x</label>
                <value>fa-2x</value>
              </item>
              <item>
                <label>3x</label>
                <value>fa-3x</value>
              </item>
