<?xml version="1.0" encoding="utf-8"?>
<Content type="xform" name="EditContent">
	<model>
		<instance>
			<tblContent>
				<nContentKey/>
				<nContentPrimaryId/>
				<nVersion/>
				<cContentForiegnRef/>
				<cContentName/>
				<cContentSchemaName>Meds</cContentSchemaName>
				<cContentXmlBrief>
					<Content showRelated="Tag,Contact">
						<Headline/>
						<Strapline/>
						<Images>
							<img class="thumbnail"/>
							<img class="display"/>
							<img class="detail"/>
						</Images>
					</Content>
				</cContentXmlBrief>
				<cContentXmlDetail>
					<Content>
						<Headline/>
						<AvailableFrom/>
						<ManufacturerName/>
						<GenericName/>
						<Strength/>
						<Dosage/>
						<AvailableForm/>
						<SideEffect/>
						<Contraditions/>
						<Precautions/>
						<Warnings/>
						<Strapline/>
						<Body/>
						<Images>
							<img class="thumbnail"/>
							<img class="display"/>
							<img class="detail"/>
						</Images>
					</Content>
				</cContentXmlDetail>
				<nAuditId/>
				<nAuditKey/>
				<dPublishDate/>
				<dExpireDate/>
				<dInsertDate/>
				<nInsertDirId/>
				<dUpdateDate/>
				<nUpdateDirId/>
				<nStatus>1</nStatus>
				<cDescription/>
			</tblContent>
			<Relation type="Author" relatedContentId="" direction="2way"/>
		</instance>
		<submission id="EditContent" action="" method="post" event="return form_check(this)"/>
		<bind nodeset="tblContent">
			<bind id="cContentPath" nodeset="cContentName" required="true()" type="string"/>
			<bind id="dPublishDate" nodeset="dPublishDate" required="false()" type="string"/>
			<bind id="dExpireDate" nodeset="dExpireDate" required="false()" type="string"/>
			<bind id="nStatus" nodeset="nStatus" required="true()" type="string"/>
			<bind id="cDescription" nodeset="cDescription" required="false()" type="string"/>
			<bind nodeset="cContentXmlBrief/Content">
				<bind id="cContentHeadline" nodeset="Headline" required="true()" type="string"/>
				<bind id="dPublishDate" nodeset="PublishDate" required="false()" type="string"/>
				<bind id="cContentStrapline" nodeset="Strapline" required="false()" type="string"/>
				<bind id="cContentThumbnail" nodeset="Images/img[@class='thumbnail']" required="false()" type="xml-replace"/>
				<bind id="cContentDisplay" nodeset="Images/img[@class='display']" required="false()" type="xml-replace"/>
				<bind id="cContentFullSizePicture" nodeset="Images/img[@class='detail']" required="false()" type="xml-replace"/>
			</bind>
			<bind nodeset="cContentXmlDetail/Content">
				<bind id="cMetaTitle" nodeset="@metaTitle" required="false()" type="string"/>
				<bind id="cMetaDescription" nodeset="@metaDescription" required="false()" type="string"/>
				<bind id="cContentHeadline" nodeset="Headline" required="true()" type="string"/>
				<bind id="AvailableFrom" nodeset="AvailableFrom" required="false()" type="string"/>
				<bind id="ManufacturerName" nodeset="ManufacturerName" required="false()" type="string"/>
				<bind id="GenericName" nodeset="GenericName" required="false()" type="string"/>
				<bind id="Strength" nodeset="Strength" required="false()" type="string"/>
				<bind id="Dosage" nodeset="Dosage" required="false()" type="string"/>
				<bind id="AvailableForm" nodeset="AvailableForm" required="false()" type="string"/>
				<bind id="SideEffect" nodeset="SideEffect" required="false()" type="string"/>
				<bind id="Contraditions" nodeset="Contraditions" required="false()" type="string"/>
				<bind id="Precautions" nodeset="Precautions" required="false()" type="string"/>
				<bind id="Warnings" nodeset="Warnings" required="false()" type="string"/>
				<bind id="dPublishDate" nodeset="PublishDate" required="false()" type="string"/>
				<bind id="cContentStrapline" nodeset="Strapline" required="false()" type="string"/>
				<bind id="cContentThumbnail" nodeset="Images/img[@class='thumbnail']" required="false()" type="xml-replace"/>
				<bind id="cContentDisplay" nodeset="Images/img[@class='display']" required="false()" type="xml-replace"/>
				<bind id="cContentFullSizePicture" nodeset="Images/img[@class='detail']" required="false()" type="xml-replace"/>
				<bind id="cContentBody" nodeset="Body" required="false()" type="string"/>
			</bind>
			<bind id="dPublishDate" nodeset="dPublishDate" required="false()" type="string"/>
		</bind>
		<bind nodeset="Relation">
			<bind id="Related-Author" nodeset="@relatedContentId" required="false()" type="string"/>
		</bind>
	</model>
	<group ref="EditContent">
		<label>Medication</label>
		<group class="tabs">
			<group>
				<label>
					<i class="fas fa-pen"> </i>
					<span class="space"> </span>
					<span>Content</span>
				</label>
				<group ref="Content">
					<input bind="cContentHeadline" class="required">
						<label>Medication Name</label>
					</input>
					
					<textarea bind="cContentStrapline" class="TextArea xhtml" rows="6" cols="70">
						<label>Intro</label>
					</textarea>
					<group>
						<relatedContent search="find add" type="Condition" relationType="Condition" direction="2way" class="form-section-wrapper">
							<label>Related Conditions</label>
						</relatedContent>
					</group>
				</group>
			</group>
			<group>
				<label>
					<i class="fas fa-list"> </i>
					<span class="space"> </span>
					<span>Description</span>
				</label>
				<group>
					<group class="row">
						<input bind="AvailableFrom" class="col-lg-6">
							<label>Available From</label>
						</input>
						<input bind="ManufacturerName" class="col-lg-6">
							<label>Manufacturer Name</label>
						</input>
						<input bind="GenericName" class="col-lg-6">
							<label>Generic Name</label>
						</input>
						<input bind="Strength" class="col-lg-6">
							<label>Strength</label>
						</input>
					</group>
					<textarea bind="cContentBody" class="TextArea xhtml" rows="15" cols="70">
						<label>How to take</label>
					</textarea>
					<textarea bind="Dosage" class="TextArea xhtml" rows="15" cols="70">
						<label>Dosage</label>
					</textarea>
					<textarea bind="AvailableForm" class="TextArea xhtml" rows="15" cols="70">
						<label>Available Form</label>
					</textarea>
				</group>
			</group>
			<group>
				<label>
					<i class="fas fa-warning"> </i>
					<span class="space"> </span>
					<span>Warnings</span>
				</label>
				<group>
					<textarea bind="SideEffect" class="TextArea xhtml" rows="15" cols="70">
						<label>Side Effects</label>
					</textarea>
					<textarea bind="Contraditions" class="TextArea xhtml" rows="15" cols="70">
						<label>Contraditions</label>
					</textarea>
					<textarea bind="Precautions" class="TextArea xhtml" rows="15" cols="70">
						<label>Precautions</label>
					</textarea>
					<textarea bind="Warnings" class="TextArea xhtml" rows="15" cols="70">
						<label>Warnings</label>
					</textarea>
				</group>
			</group>
			<!--<group>
				<label>
					<i class="fas fa-image"> </i>
					<span class="space"> </span>
					<span>Images</span>
				</label>
				<group>
					<input bind="cContentFullSizePicture" class="short pickImage">
						<label>Main News Article Image</label>
						<help class="inline">
							<p>
