        <add key="DefaultCurrencyOveride" value="" />
        <add key="StockControl" value="off" />
        <add key="Deposit" value="off" />
        <add key="DepositAmount" value="0" />
        <add key="NotesXForm" value="..\xsl\cart\notes.xsl" />
