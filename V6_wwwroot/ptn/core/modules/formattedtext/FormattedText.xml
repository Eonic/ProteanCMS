<?xml version="1.0" encoding="utf-8"?>
<Content type="xform" name="EditContent">
	<model>
		<instance>
			<tblContent>
				<nContentKey/>
				<nContentPrimaryId/>
				<nVersion/>
				<cContentForiegnRef/>
				<cContentName/>
				<cContentSchemaName>Module</cContentSchemaName>
				<cContentXmlBrief>
					<Content position="" moduleType="FormattedText" box="" title="" link="" linkType="internal" linkText="Read more" linkBox="" imagePosition="below" char80Layout="center"/>
				</cContentXmlBrief>
				<cContentXmlDetail/>
				<nAuditId/>
				<nAuditKey/>
				<dPublishDate/>
				<dExpireDate/>
				<dInsertDate/>
				<nInsertDirId/>
				<dUpdateDate/>
				<nUpdateDirId/>
				<nStatus>1</nStatus>
				<cDescription/>
				<bCascade/>
			</tblContent>
		</instance>
		<submission id="EditContent" action="" method="post" event="return form_check(this)"/>
		<bind id="cModuleTitle" nodeset="tblContent/cContentName" required="false()" type="string"/>
		<bind nodeset="tblContent/cContentXmlBrief/Content">
			<bind id="cModuleBox" nodeset="@box" required="false()" type="string"/>
			<bind id="cIcon" nodeset="@icon" required="false()" type="string"/>
			<bind id="cIconStyle" nodeset="@iconStyle" required="false()" type="string"/>
			<bind id="cPosition" nodeset="@position" required="true()" type="string"/>
			<bind id="cModuleType" nodeset="@moduleType" required="true()" type="string"/>
			<bind id="cModuleTitle" nodeset="@title" required="false()" type="string"/>
			<!--<bind id="cModuleLink" nodeset="@link" required="false()" type="string"/>
      <bind id="cLinkType" nodeset="@linkType" required="false()" type="string"/>
      <bind id="cModuleLinkText" nodeset="@linkText" required="false()" type="string"/>-->
			<bind id="bLinkBox" nodeset="@linkBox" required="false()" type="string"/>
			<bind id="panelImage" nodeset="@panelImage" required="false()" type="string" />
			<bind id="imagePosition" nodeset="@imagePosition" required="false()" type="string" />
			<bind id="maxWidth" nodeset="@maxWidth" required="false()" type="string" />
			<bind id="char80Layout" nodeset="@char80Layout" required="false()" type="string" />
			<bind id="v-align" nodeset="@v-align" required="false()" type="string" />
		</bind>
		<ewInclude filePath="/ptn/core/modules/genericmodule.xml" xPath="descendant-or-self::bind[@nodeset='tblContent/cContentXmlBrief/Content']"/>
		<!--<ewInclude filePath="/ewthemes/xforms/content/module/genericModule.xml" xPath="descendant-or-self::bind[@nodeset='tblContent/cContentXmlBrief/Content']"/>-->
		<bind id="cContentBody" nodeset="tblContent/cContentXmlBrief/Content" required="false()" type="string"/>
		<ewInclude filePath="/ptn/core/modules/genericmodule.xml" xPath="descendant-or-self::bind[@nodeset='tblContent']"/>
	</model>
	<group ref="EditContent">
		<label>Formatted Text</label>
		<group  class="tabs">
			<group>
				<label>
					<i class="fas fa-pen"> </i>
					<span class="space"> </span>
					<span>Content</span>
				</label>
				<group>
					<input bind="cModuleTitle" class="long">
						<label>Title or Name</label>
					</input>
					<textarea bind="cContentBody" class="TextArea xhtml" rows="25" cols="70">
					</textarea>
				</group>
			</group>
			<group>
				<label>
					<i class="fas fa-link"> </i>
					<span class="space"> </span>
					<span>Footer Links</span>
				</label>
				<ewInclude filePath="/ptn/core/modules/genericmodule.xml" xPath="descendant-or-self::group[@id='FooterLinks']"/>
				<group>
					<select bind="bLinkBox" appearance="full" class="multiline bs-only">
						<item>
							<label>Link entire box</label>
							<value>true</value>
						</item>
						<help class="inline">This will make the whole of the box clickable, rather than just the button at the bottom. This is better for touchscreen devices, but don't use this if you have hyperlinks in the text.</help>
					</select>
				</group>
			</group>
			<group>
				<label>
					<i class="fas fa-image"> </i>
					<span class="space"> </span>
					<span>Image</span>
				</label>
				<group>
					<input bind="panelImage" class="pickImageFile label-border-top bs-only">
						<label>Choose Image</label>
						<value></value>
					</input>
					<select1 bind="imagePosition" appearance="full" class="inline-items">
						<label>Place image above or below heading?</label>
						<item>
							<label>above</label>
							<value>above</value>
						</item>
						<item>
							<label>below</label>
							<value>below</value>
						</item>
					</select1>
				</group>
			</group>
			<group>
				<label>
					<i class="fas fa-brush"> </i>
					<span class="space"> </span>
					<span>Presentation</span>
				</label>
				<ewInclude filePath="/ptn/core/modules/genericmodule.xml" xPath="descendant-or-self::group[@id='presentation']"/>
				<group class="row">
					<input bind="maxWidth" class="col-lg-6">
						<label>Max Width</label>
						<value></value>
						<help class="inline">Add a value ending either px or %.</help>
					</input>
					<group class="col-lg-6">
						<select1 bind="char80Layout" >
							<label>Layout of content</label>
							<item>
								<label>Centre</label>
								<value>center</value>
							</item>
							<item>
								<label>Left</label>
								<value>left</value>
							</item>
							<item>
								<label>Right</label>
								<value>right</value>
							</item>
							<item>
								<label>Wide</label>
								<value>wide</value>
							</item>
						</select1>
					</group>
          <group class="col-lg-6">
            <select1 bind="v-align" >
              <label>Vertical alignment</label>
              <item>
                <label>Top</label>
                <value>top</value>
              </item>
              <item>
                <label>Center</label>
                <value>center</value>
              </item>
              <item>
                <label>Bottom</label>
                <value>bottom</value>
              </item>
            </select1>
          </group>
				</group>
			</group>
			<group>
				<label>
					<i class="fas fa-tachometer-alt"> </i>
					<span class="space"> </span>
					<span>Animate</span>
				</label>
				<ewInclude filePath="/ptn/core/modules/genericmodule.xml" xPath="descendant-or-self::group[@id='animate']"/>
			</group>
			<group>
				<label>
					<i class="fas fa-cog"> </i>
					<span class="space"> </span>
					<span>Advanced Settings</span>
				</label>
				<group>
					<!-- These hidden fields and bindings are required for the component-->
					<input bind="nContentKey" class="hidden">
						<label>ContentId</label>
					</input>
					<input bind="cModuleType" class="hidden">
						<label>ModuleType</label>
					</input>
					<!-- end of hidden fields -->
					<ewInclude filePath="/ptn/core/modules/genericmodule.xml" xPath="descendant-or-self::group[@id='publish']"/>
				</group>
			</group>
		</group>
	</group>
	<group ref="submit" class="contentSubmit">
		<submit submission="" ref="ewSubmit" class="principle">
			<label>Save Text</label>
		</submit>
	</group>
</Content>
