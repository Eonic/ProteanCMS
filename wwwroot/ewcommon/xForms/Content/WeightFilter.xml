<?xml version="1.0" encoding="utf-8" ?>

<Content type="xform" name="EditContent">
	<model>
		<instance>
			<tblContent>
				<nContentKey/>
				<nContentPrimaryId/>
				<nVersion/>
				<cContentForiegnRef/>
				<cContentName>WeightFilter</cContentName>
				<cContentSchemaName>Module</cContentSchemaName>
				<cContentXmlBrief>
					<Content filterType="WeightFilter" FromWeight="" ToWeight="" Step=""/>
				</cContentXmlBrief>
				<cContentXmlDetail/>
				<nAuditId/>
				<nAuditKey/>
				<dPublishDate/>
				<dExpireDate/>
				<dInsertDate/>
				<nInsertDirId/>
				<dUpdateDate/>
				<nUpdateDirId/>
				<nStatus>1</nStatus>
				<cDescription/>
				<bCascade/>
			</tblContent>
		</instance>
		<submission id="EditContent" action="" method="post" event="return form_check(this)"/>
		<bind id="cContentName" nodeset="tblContent/cContentName" required="true()" type="string"/>
		<bind id="dPublishDate" nodeset="tblContent/dPublishDate" required="false()" type="string"/>
		<bind id="dExpireDate" nodeset="tblContent/dExpireDate" required="false()" type="string"/>
		<bind id="nStatus" nodeset="tblContent/nStatus" required="true()" type="string"/>
		<bind id="cDescription" nodeset="tblContent/cDescription" required="false()" type="string"/>
		<bind id="bCascade" nodeset="tblContent/bCascade" required="false()" type="string"/>

		<bind id="nFromWeight" nodeset="tblContent/cContentXmlBrief/Content/@FromWeight" required="false()" type="string"/>
		<bind id="nToWeight" nodeset="tblContent/cContentXmlBrief/Content/@ToWeight" required="false()" type="string"/>
		<bind id="nStep" nodeset="tblContent/cContentXmlBrief/Content/@Step" required="false()" type="string"/>
	</model>
	<group ref="EditContent" class="2col">
		<label>Edit Weight Filter</label>
		<group>
			<group>
				<input bind="nContentKey" class="hidden">
					<label>ContentId</label>
				</input>
				<label>Settings</label>
				<input bind="cContentName" class="required short">
					<label>Name</label>
				</input>
				<input bind="dPublishDate" class="calendar short">
					<label>Publish Date</label>
				</input>
				<input bind="dExpireDate" class="calendar short">
					<label>Expire Date</label>
				</input>
				<select1 bind="nStatus" appearance="full" class="required vshort">
					<label>Status</label>
					<item>
						<label>Live</label>
						<value>1</value>
					</item>
					<item>
						<label>Hidden</label>
						<value>0</value>
					</item>
				</select1>
			</group>
		</group>
		<group>
			<group>
				<input bind="nFromWeight" type="text" >
					<label>From Weight</label>
				</input>
				<input bind="nToWeight" type="text" >

					<label>To Weight</label>
				</input>
				<input bind="nStep" type="text" >
					<label>Step</label>
				</input>
			</group>
		</group>
	</group>
	<group ref="submit" class="contentSubmit">
		<submit submission="" ref="ewSubmit" class="principle">
			<label>Save Weight Filter</label>
		</submit>
	</group>
</Content>
